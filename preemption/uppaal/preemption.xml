		<declaration>clock executionTime;
bool run := false;

void Idle(){
    int i;
    for(i=1; i&lt;=N; i++){
        running[i] = 0;
    } 
}

void selectThread(){
    int i;
    int res = -1;
    for(i=1; i&lt;=N; i++){
        running[i] = false;
        if(waiting[i]){
            res = i;
        }
    }
    if(res&gt;=0){
        running[res] = true;
        waiting[res] = false;
    }
}</declaration>
